{% extends "base.html.twig" %}

{% block title %}Administration{% endblock %}

{% block body %}
    <page data-title="admin-login">
        <div id="admin-login" class="container my-3">
            <div class="row">
                <div class="col-md-6 offset-md-3 col-lg-4 offset-lg-4">
                    <h2 class="text-center text-dark mt-2">Admin Login</h2>
                    <div class="card my-2">
                        <form class="card-body cardbody-color p-lg-5">
                            <div class="text-center">
                                <img src="/assets/images/logo200px.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                                     width="200px" alt="profile">
                            </div>

                            <div class="mb-3">
                                <input type="text" class="form-control" id="adminUsername" aria-describedby="emailHelp"
                                       placeholder="Username">
                            </div>
                            <div class="mb-3">
                                <input type="password" class="form-control" id="adminPassword" placeholder="Password">
                            </div>
                            <div class="text-center"><button id="adminSubmit" class="btn btn-outline-light px-5 mb-5 w-100">Login</button></div>
                            <div id="adminFormMessages" class="text-center text-danger"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </page>
{% endblock %}