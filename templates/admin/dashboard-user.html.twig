{% extends "base.html.twig" %}

{% block title %}Dashboard{% endblock %}

{% block body %}

    {% if session.use %}
        <page data-title="dashboard-user">

            <div class="container">
                <h1 class="my-1">Dashboard - User</h1>
                <div class="my-1">Hello {{ session.use }}.</div>
                <div class="my-1">Last Login: {{ session.userLastLogin|date("d-m-Y H:i:s", "Europe/Paris") }}</div>
                <div class="row d-flex justify-content-center my-2">

                    {% include "common/partial/_dashboard_menu.html.twig" %}

                    <div class="col border rounded-3 bg-dark text-light py-3 mx-2">
                        <div class="row px-3">
                            <div class="d-flex justify-content-between mb-3">
                                <h4>User Profile</h4>
                            </div>

                            <div class="border border-light rounded-3 mb-4">
                                <form>
                                    <div class="mb-3">
                                        <label for="header-heading" class="form-label">Username</label>
                                        <input type="text" class="form-control" id="header-heading"
                                               value="{{ userData.username }}">
                                    </div>
                                    <div class="mb-3">
                                        <label for="header-subheading" class="form-label">First Name</label>
                                        <input type="text" class="form-control" id="header-subheading"
                                               value="{{ userData.firstName }}">
                                    </div>
                                </form>
                                <div>
                                    <p>Last Updated: </p>
                                </div>
                                <div class="text-center mb-3">
                                    <button class="btn btn-primary" id="headerSubmit">Save Update <i
                                                class="fa-solid fa-floppy-disk"></i></button>
                                </div>
                                <div id="headerMessageResult"></div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </page>
    {% else %}
        <div class="container mt-5 vh-100">
            This page is only accessible by administrator. Please log in <a class="text-black" href="/admin-login">here</a> first.
        </div>
    {% endif %}

{% endblock %}